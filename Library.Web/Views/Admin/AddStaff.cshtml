@{
    ViewData["Title"] = "Personel Ekle";
}
<h2>Yeni Personel Ekle</h2>
<form asp-action="AddStaff" method="post" class="w-50">
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input type="text" name="firstName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input type="text" name="lastName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Kullanıcı Adı</label>
        <input type="text" name="username" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">E-posta</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Face ID (Demo)</label>
        <input type="text" name="faceId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form> 
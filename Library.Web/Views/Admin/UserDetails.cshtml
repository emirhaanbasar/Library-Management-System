@model Library.Core.User
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}
<h2>Kullanıcı Detayları</h2>
<table class="table">
    <tr><th>Ad</th><td>@Model.FirstName</td></tr>
    <tr><th>Soyad</th><td>@Model.LastName</td></tr>
    <tr><th>Kullanıcı Adı</th><td>@Model.Username</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Telefon</th><td>@Model.Phone</td></tr>
    <tr><th>Rol</th><td>@Model.Role</td></tr>
</table>
<a asp-action="Users" class="btn btn-secondary">Geri</a>
<a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-warning">Düzenle</a> 
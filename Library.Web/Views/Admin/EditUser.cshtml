@model Library.Core.User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}
<h2>Kullanıcı Düzenle</h2>
<form asp-action="EditUser" method="post">
    <input type="hidden" name="id" value="@Model.UserId" />
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input type="text" class="form-control" value="@Model.FirstName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input type="text" class="form-control" value="@Model.LastName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Kullanıcı Adı</label>
        <input type="text" class="form-control" value="@Model.Username" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">E-posta</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Telefon</label>
        <input type="text" name="phone" class="form-control" value="@Model.Phone" />
    </div>
    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select name="role" class="form-control">
            <option value="Student" selected="@(Model.Role == "Student")">Öğrenci</option>
            <option value="Staff" selected="@(Model.Role == "Staff")">Personel</option>
            <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Users" class="btn btn-secondary">İptal</a>
</form> 
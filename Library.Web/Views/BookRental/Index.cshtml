@model IEnumerable<Library.Core.Book>
@{
    ViewData["Title"] = "Kitap Kirala";
}
<h2 class="mb-4">Kitap Kirala</h2>
<form method="get" class="mb-4">
    <div class="row g-2 align-items-center justify-content-center flex-nowrap flex-md-wrap">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <input type="text" name="search" class="form-control form-control-lg" placeholder="Başlık veya yazar ara..." value="@(ViewContext.HttpContext.Request.Query["search"])" />
        </div>
        <div class="col-6 col-md-3 mb-2 mb-md-0">
            <select name="author" class="form-select form-select-lg">
                <option value="">Yazar (Tümü)</option>
                @foreach (var a in (IEnumerable<string>)ViewBag.Authors)
                {
                    if (!string.IsNullOrWhiteSpace(a))
                    {
                        if ((ViewBag.SelectedAuthor ?? "") == a)
                        {
                            <option value="@a" selected>@a</option>
                        }
                        else
                        {
                            <option value="@a">@a</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-6 col-md-3 mb-2 mb-md-0">
            <select name="genre" class="form-select form-select-lg">
                <option value="">Tür (Tümü)</option>
                @foreach (var g in (IEnumerable<string>)ViewBag.Genres)
                {
                    if (!string.IsNullOrWhiteSpace(g))
                    {
                        if ((ViewBag.SelectedGenre ?? "") == g)
                        {
                            <option value="@g" selected>@g</option>
                        }
                        else
                        {
                            <option value="@g">@g</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-12 col-md-2 d-grid">
            <button type="submit" class="btn btn-primary btn-lg w-100">Filtrele</button>
        </div>
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Genre</td>
            <td>
                <a asp-action="Rent" asp-route-id="@book.BookId" class="btn btn-sm btn-primary">Kirala</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="MyRentals" class="btn btn-success mt-3">Kiralanan Kitaplarım</a> 
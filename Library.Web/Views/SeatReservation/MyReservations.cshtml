@model IEnumerable<Library.Core.SeatReservation>
@{
    ViewData["Title"] = "Rezervasyonlarım";
}
<h2 class="mb-4">Aktif Koltuk Rezervasyonlarım</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Koltuk No</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>İptal</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var res in Model)
    {
        <tr>
            <td>@res.Seat?.SeatNumber</td>
            <td>@res.ReservationDate.Add(res.StartTime).ToString("g")</td>
            <td>@res.ReservationDate.Add(res.EndTime).ToString("g")</td>
            <td>
                <form asp-action="Cancel" method="post" style="display:inline">
                    <input type="hidden" name="reservationId" value="@res.ReservationId" />
                    <button type="submit" class="btn btn-sm btn-danger">İptal Et</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary mt-3">Oturma Planına Dön</a> 
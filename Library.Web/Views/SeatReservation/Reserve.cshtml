@model Library.Web.Models.SeatReservationViewModel
@{
    ViewData["Title"] = "Koltuk Rezerve Et";
}
<h2 class="mb-4">Koltuk @Model.SeatNumber Rezerve Et</h2>
<form asp-action="Reserve" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="SeatId" />
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label">Başlangıç Zamanı</label>
        <input asp-for="StartTime" class="form-control" type="datetime-local" required />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label">Bitiş Zamanı</label>
        <input asp-for="EndTime" class="form-control" type="datetime-local" required />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Rezerve Et</button>
    <div class="mt-3 text-center">
        <a asp-action="Index">Oturma Planına Dön</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
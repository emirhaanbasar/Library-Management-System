@model Library.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<h2 class="mb-4">Giriş Yap</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-body">
                <ul class="nav nav-tabs mb-3" id="loginTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="student-tab" data-bs-toggle="tab" data-bs-target="#student" type="button" role="tab">Öğrenci Girişi</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="staff-tab" data-bs-toggle="tab" data-bs-target="#staff" type="button" role="tab">Personel Girişi</button>
                    </li>
                </ul>
                <div class="tab-content" id="loginTabContent">
                    <div class="tab-pane fade show active" id="student" role="tabpanel">
                        <form asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label asp-for="TCOrUsername" class="form-label">TC Kimlik No</label>
                                <input asp-for="TCOrUsername" class="form-control" required />
                                <span asp-validation-for="TCOrUsername" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Öğrenci Girişi</button>
                        </form>
                        <div class="mt-3 text-center">
                            <a asp-action="Register">Hesabın yok mu? Kayıt ol</a>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="staff" role="tabpanel">
                        <form asp-action="StaffLogin" method="post" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label asp-for="TCOrUsername" class="form-label">Kullanıcı Adı</label>
                                <input asp-for="TCOrUsername" class="form-control" required />
                                <span asp-validation-for="TCOrUsername" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Personel Girişi</button>
                        </form>
                        <!-- Personel sekmesinde kayıt ol linki gösterilmez -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
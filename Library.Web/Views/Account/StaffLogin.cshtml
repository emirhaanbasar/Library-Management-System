@model Library.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Personel Girişi";
}
<h2 class="mb-4">Personel Girişi</h2>
<form asp-action="StaffLogin" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="TCOrUsername" class="form-label">Kullanıcı Adı</label>
        <input asp-for="TCOrUsername" class="form-control" required />
        <span asp-validation-for="TCOrUsername" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
    <div class="mt-3 text-center">
        <a asp-action="RegisterStaff">Yeni Personel Ekle</a>
    </div>
</form>
<div class="mt-4 text-center">
    <button type="button" class="btn btn-outline-secondary" onclick="openFaceIdModal()">Face ID ile Giriş</button>
</div>
<!-- FaceId Modal -->
<div class="modal fade" id="faceIdModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Face ID ile Giriş</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <video id="faceVideo" width="320" height="240" autoplay></video>
        <button type="button" class="btn btn-success mt-2" onclick="captureFaceId()">Yüzü Tara ve Giriş Yap</button>
        <canvas id="faceCanvas" width="320" height="240" style="display:none;"></canvas>
        <form id="faceIdForm" method="post" asp-action="FaceIdLogin">
            <input type="hidden" name="faceId" id="faceIdInput" />
        </form>
      </div>
    </div>
  </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function openFaceIdModal() {
            var modal = new bootstrap.Modal(document.getElementById('faceIdModal'));
            modal.show();
            const video = document.getElementById('faceVideo');
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(stream => {
                    video.srcObject = stream;
                });
        }
        function captureFaceId() {
            const video = document.getElementById('faceVideo');
            const canvas = document.getElementById('faceCanvas');
            canvas.getContext('2d').drawImage(video, 0, 0, canvas.width, canvas.height);
            const dataUrl = canvas.toDataURL('image/png');
            document.getElementById('faceIdInput').value = dataUrl;
            // Kamerayı kapat
            video.srcObject.getTracks().forEach(track => track.stop());
            document.getElementById('faceIdForm').submit();
        }
    </script>
} 
@{
    ViewData["Title"] = "Dashboard";
    var role = Model.Role as string;
}
<h2>Dashboard</h2>
@if (role == "Admin" || role == "Staff")
{
    <div class="mb-4 d-flex gap-3 justify-content-center">
        @if (role == "Admin")
        {
            <a asp-controller="Account" asp-action="RegisterStaff" class="btn btn-outline-primary btn-lg">Personel Ekle</a>
        }
        <a asp-controller="Book" asp-action="Create" class="btn btn-outline-success btn-lg">Kitap Ekle</a>
        <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-info btn-lg">Kullanıcı Yönetimi</a>
        <a asp-controller="SeatReservation" asp-action="Manage" class="btn btn-warning btn-lg">Koltuk Yönetimi</a>
    </div>
}
<div class="mb-4 d-flex gap-3 justify-content-center">
    <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-secondary btn-lg">Kullanıcı İşlemleri</a>
</div>
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Kitap</h5>
                <p class="display-6">@Model.BookCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Kullanıcı</h5>
                <p class="display-6">@Model.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Aktif Kiralama</h5>
                <p class="display-6">@Model.RentalCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Aktif Rezervasyon</h5>
                <p class="display-6">@Model.ReservationCount</p>
            </div>
        </div>
    </div>
</div>
@if (role == "Admin")
{
    <div class="alert alert-danger">Geciken Kitap Sayısı: <b>@Model.OverdueCount</b></div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (role == "Student" || role == "Staff")
{
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Aktif Kiralamalarım</h5>
                    <p class="display-6">@Model.MyActiveRentals</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Aktif Rezervasyonlarım</h5>
                    <p class="display-6">@Model.MyActiveReservations</p>
                </div>
            </div>
        </div>
    </div>
} 